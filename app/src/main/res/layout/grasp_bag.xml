<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pencilbox.netknight.view.GraspBag">

    <LinearLayout
        android:id="@+id/grasp_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <ImageButton
            android:id="@+id/btn_grasptopleft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@mipmap/unfold_more"
            android:contentDescription="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="   网路抓包"
            android:textColor="#FFF"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grasp_top"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/text_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择应用"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始抓包" />

        <Button
            android:id="@+id/btn_stop_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="停止抓包"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_connect_server_by_http"
            android:text="建立连接by http"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_packet"/>


    </LinearLayout>

</RelativeLayout>
