<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pencilbox.netknight.view.GraspBag">

    <LinearLayout
        android:id="@+id/grasp_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#060600">

        <ImageButton
            android:id="@+id/btn_grasptopleft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@mipmap/top1"
            android:contentDescription="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="   网路抓包"
            android:textColor="#FFF"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grasp_top"
        android:layout_margin="100dp">

        <TextView
            android:id="@+id/text_grasp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择应用    "
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_grasp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

</RelativeLayout>
