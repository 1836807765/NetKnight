<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/netuselinear"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/appnetuse_icon"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <TextView
            android:id="@+id/netuseAppLabel"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="Label"
            android:textColor="#3191e6"
            android:textSize="15dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_toRightOf="@+id/netuselinear"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="移动网络"
            android:textSize="10dp" />

        <SeekBar
            android:id="@+id/celluar_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WIFI网络"
            android:textSize="10dp" />

        <SeekBar
            android:id="@+id/wifi_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp" />
    </LinearLayout>

</RelativeLayout>